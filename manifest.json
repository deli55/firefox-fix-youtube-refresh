{
  "manifest_version": 2,
  "name": "Fix Youtube Refresh",
  "version": "1.0",
  "description": "Refreshes the current YouTube video while preserving the timestamp.",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "*://www.youtube.com/*"
  ],
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Fix Youtube Refresh"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
